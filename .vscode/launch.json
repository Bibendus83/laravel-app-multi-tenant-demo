{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Xdebug for Project Multi Tenant Debug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/shared/httpd/multi-tenant-debug": "${workspaceFolder}"
            }
        }, {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}
